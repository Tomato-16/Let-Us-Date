<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    >
    <TextView 
		android:layout_width="fill_parent"
		android:layout_height="50dp" 
		android:text="用户修改密码" 
		style="@style/widget_config_title">
	</TextView>
	<TableLayout 
		android:id="@+id/TableLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:collapseColumns="2"
		android:paddingTop="10dip"
		>
	
		<TableRow 
			android:gravity="center_horizontal" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			>
				<TextView 
					android:textColor="@drawable/black"
					android:textSize="16px" 
					android:layout_width="50px"
					android:layout_height="40px" android:text="@string/tvOldPwd"></TextView>
				<EditText  
					android:id="@+id/etOldPwd"
					android:textSize="16px"
					android:layout_width="200px" 
					android:layout_height="40px"
					android:password="true"
				></EditText>
		</TableRow>
	    
		<TableRow 
			android:gravity="center_horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingTop="5dip">
			<TextView 
				android:id="@+id/textView_Passwd" 
				android:textColor="@drawable/black"
				android:textSize="16px"
				android:layout_width="wrap_content" 
				android:layout_height="40px" android:text="@string/tvNewPwd"></TextView>
		
			<EditText 
				android:id="@+id/etPwd1" 
				android:textSize="16px"
				android:layout_width="wrap_content" 
				android:layout_height="40px"
				android:password="true"
			></EditText>
			</TableRow>
			<TableRow 
			android:gravity="center_horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingTop="5dip">
			<TextView 
				android:text="@string/tvPwd2"
				android:textColor="@drawable/black"
				android:textSize="16px"
				android:layout_width="wrap_content" 
				android:layout_height="40px"></TextView>
		
			<EditText 
				android:id="@+id/etPwd2" 
				android:textSize="16px"
				android:layout_width="wrap_content" 
				android:layout_height="40px"
				android:password="true"
			></EditText>
		</TableRow>
	</TableLayout> 
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="25dp" 
		android:text="选择操作" 
		android:layout_marginTop="10dip"
		style="@style/widget_config_item">
	</TextView>
	<TableLayout 
		android:id="@+id/TableLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:collapseColumns="2"
		android:paddingTop="7dp"
		>
		<TableRow 
			android:gravity="center_horizontal"
			android:id="@+id/TableRow02" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			<ImageButton 
				android:text="@string/btnReg" 
				android:textColor="@drawable/blue"
				android:src="@drawable/modify"
				android:textSize="16px"
				android:layout_width="150px" 
				android:layout_height="60px" android:id="@+id/btnPwdModify"></ImageButton>
			<ImageButton android:layout_height="60px" android:src="@drawable/dateback" android:id="@+id/btnPwdBack" android:layout_width="150px"></ImageButton>
		</TableRow>
	</TableLayout>
</LinearLayout>
